root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true
# Please don't specify an indent_size here; that has too many unintended consequences.

[*.tex]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
